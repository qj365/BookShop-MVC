@foreach (var item in Model)
{
    <div class="spacing">
        <div class="cat-products">
            <div class="cat-products__wrapper">
                <div class="cat-products__inner">
                    <div class="cat-products__header">
                        <div class="cat-products__title">@item.Name</div>
                        <a href="/danh-muc/@item.Name?id=@item.Id"
                           class="link cat-products__link">
                            Xem tất cả <svg class="tickid-svg-icon icon-arrow-right"
                                            enable-background="new 0 0 11 11" viewBox="0 0 11 11" x="0"
                                            y="0">
                                <path d="m2.5 11c .1 0 .2 0 .3-.1l6-5c .1-.1.2-.3.2-.4s-.1-.3-.2-.4l-6-5c-.2-.2-.5-.1-.7.1s-.1.5.1.7l5.5 4.6-5.5 4.6c-.2.2-.2.5-.1.7.1.1.3.2.4.2z">
                                </path>
                            </svg>
                        </a>
                    </div>
                    <div class="cat-products__body">
                        @{ Html.RenderAction("RenderCategoryContent", "Home", new { id = item.Id}); }
                    </div>
                </div>
            </div>
        </div>
    </div>
}